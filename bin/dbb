devbox_name=$(docker-compose ps | grep "Up" | grep rails | awk '{print $1}')

if [ ! -z "$devbox_name" ]; then
  CMD="cd /home/devbox/app; bundle exec $@";
  docker exec -it $devbox_name /sbin/setuser devbox /bin/bash -lc "$CMD"
fi
